<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.rmoquin.osgi</groupId>
    <artifactId>bundles</artifactId>
    <version>1.0-alpha1</version>
  </parent>
  <groupId>com.rmoquin.bundle</groupId>
  <artifactId>kryo</artifactId>
  <version>2.17</version>
  <packaging>bundle</packaging>
  <name>${project.artifactId}</name>
  <description>${project.artifactId}</description>
  <properties>
    <symbolic.name>${project.groupId}.${project.artifactId}</symbolic.name>
    <embed-dep>*;scope=provided;type=!pom;inline=true</embed-dep>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Bundle-Name>${project.artifactId}</Bundle-Name>
            <Bundle-SymbolicName>${symbolic.name}</Bundle-SymbolicName>
            <Bundle-Description>${project.name}</Bundle-Description>
            <Embed-Dependency>${embed-dep}</Embed-Dependency>
            <Private-Package>
            </Private-Package>
            <Export-Package>
              com.esotericsoftware.kryo,
              com.esotericsoftware.kryo.io,
              com.esotericsoftware.kryo.serializers,
              com.esotericsoftware.kryo.util
            </Export-Package>
            <Import-Package>
              org.objenesis,
              org.objenesis.instantiator,
              com.esotericsoftware.minlog,
              com.esotericsoftware.reflectasm,
              com.esotericsoftware.reflectasm.shaded.org.objectweb.asm,
              *
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.esotericsoftware.kryo</groupId>
      <artifactId>kryo</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.rmoquin.bundle</groupId>
      <artifactId>reflectasm-shaded</artifactId>
      <version>1.07</version>
    </dependency>
    <dependency>
      <artifactId>objenesis</artifactId>
      <groupId>org.objenesis</groupId>
      <version>1.2</version>
    </dependency>
    <dependency>
      <groupId>com.rmoquin.bundle</groupId>
      <artifactId>minlog</artifactId>
      <version>1.2</version>
    </dependency>
  </dependencies>
</project>